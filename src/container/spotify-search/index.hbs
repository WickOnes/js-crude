<main class="main">
  <div class="main-content">
    <a href="/spotify">
      Головна
    </a>
     {{#with data}}
    <form method="POST" action="/spotify-search" class="search">
      <img src="/img/svg/button_search.svg" alt="">
      <input type="text" name="value" value="{{value}}">
      <button class="search__button">Пошук</button>
    </form>
   
    <ul class="playlist">
      {{#each playList }}
      <a href="/spotify-playlist?id={{id}}">
        <li class="playlist-item">
          <img src='https://picsum.photos/250/250' class="playlist__image">
          <div class="playlist__content">
            <strong class="title">{{name}}</strong>
            <p class="choose__text">Лількість пісень: {{tracks.length}}</p>
          </div>
        </li>
      </a>
      {{/each}}
    </ul>

    {{/with}}
  </div>

</main>